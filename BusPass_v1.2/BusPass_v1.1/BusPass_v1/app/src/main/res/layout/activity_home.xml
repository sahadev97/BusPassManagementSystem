<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:src="@drawable/banner3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#088F8F" />

    <TextView

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30dp"
        android:text="Seamless Journeys, Effortless Passes"
        android:textColor="#F6E019"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Dashboard"
        android:textSize="22dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="334dp"

        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:cardBackgroundColor="#088F8F"
        app:cardCornerRadius="15dp"

        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:background="#efefef"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="140dp"
            android:layout_height="140dp">

            <ImageView
                android:src="@drawable/pass_icon"
                android:layout_width="80dp"
                android:layout_height="60dp"/>

            <Button
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:onClick="NewPassBtn"
                android:text="New Pass"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:background="#efefef"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/pass_icon" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:onClick="RenewPassBtn"
                android:text="Renew Pass"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            android:background="#efefef"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/pass_icon" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:onClick="CancelPassBtn"
                android:text="Cancel Pass"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="170dp"
            android:background="#efefef"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/pass_icon" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:onClick="PassHistoryBtn"
                android:text=" Pass History"
                android:textSize="12dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>